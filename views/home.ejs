<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Yelp</title>
    <link rel='stylesheet' href='/css/style.css'/>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.js"></script>
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="/css/watson-bootstrap-dark.css">
    <link rel="stylesheet" href="/css/banner.css">
    <link rel="stylesheet" href="/css/style.css">
    <script type="text/javascript" src="https://www.google.com/recaptcha/api.js"></script>

</head>
<body ng-app = "main" >
<h2>Welcome To Yelp Analyzer</h2>
<div ng-controller = "homeController">

        <input type="text" ng-model = "search" placeholder="Enter Restaurant Name" required />
        <input type="text" ng-model = "location" placeholder="Enter Location" required />
        <button type="submit" ng-click = "searchList()">Search</button>

    <div ng-repeat = "value in data.businesses">
        <div><button type="submit" ng-click = "getReviews(value.id)">{{ value.name }}-------{{value.location.city}}</button></div>
    </div>
    <div ng-repeat = "value in result.reviews">
        <div style="background-color: #00b2ef">
            <div>{{ value.excerpt }}</div>
        </div>
    </div>







    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-12 col-xs-12">
                <div class="well">
                    <div class="form-group row">
                        <div style="padding:0px;" class="col-lg-12 col-xs-12">
                            <label class="col-lg-6 col-md-6 col-xs-6 control-label">Reviews:</label>

                            <textarea rows="12" required="true" name="text" placeholder="Please enter English text to analyze (minimum of 100 words)..." class="content_t form-control">{{ result.reviews[0].excerpt }}</textarea>
                            <div class="text-right wordsCountFootnote">
                                <span class="wordsCount small"></span>
                                <span class="small"> words</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row buttons-container">
                        <div class="col-lg-4 col-xs-4">
                            <button type="button" class="btn btn-block clear-btn">Clear</button>
                        </div>
                        <div class="col-lg-4 col-lg-push-4 col-xs-4 col-xs-push-4">
                            <button type="button" class="btn btn-block analysis-btn">Analyze</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-12 col-xs-12">
                <div style="display:none;" class="form-group row loading text-center loading">
                    <h2>&nbsp;</h2>
                    <img src="images/watson.gif">
                </div>
                <div style="display: none;" class="form-group row error">
                    <h2>&nbsp;</h2>
                    <div class="well">
                        <p class="errorMsg"></p>
                        <div style="display:none;margin-bottom:10px;" class="captcha">
                            <div data-sitekey="6LcRbQkTAAAAAGUFVbnuqDfse-XZASLZwoC34oJV" class="g-recaptcha"></div>
                        </div>
                    </div>
                </div>
                <div style="display: none;" class="results">
                    <h2>Your Personality*</h2>
                    <div class="well">
                        <div class="summary-div"></div>
                        <div style="color: gray" class="text-right">
                            <em class="small">*Compared to most people who participated in our surveys.</em>
                        </div>
                        <div style="color: gray" class="text-right">
                            <em class="small outputMessageFootnote"></em>
                        </div>
                    </div>
                </div>
            </div>
            <div style="display: none;" class="results">
                <div class="row">
                    <div class="col-lg-5 col-md-12 col-xs-12">
                        <h3>Data Behind Your Personality</h3>
                        <div style="display: none;" class="col555px well traits"></div>
                    </div>
                    <div class="col-lg-7 col-xs-12 col-md-12">
                        <h3>Visualization of Personality Data</h3>
                        <div id="vizcontainer" class="well"></div>
                    </div>
                </div>
            </div>
            <div class="hidden">
                <div id="header-template">
                    <div class="row theader">
                        <div class="col-lg-7 col-xs-7">
                            <span>Name</span>
                        </div>
                        <div class="col-lg-5 col-xs-5 text-right">
                            <span>Value</span>
                        </div>
                    </div>
                </div>
                <div id="trait-template">
                    <div class="row">
                        <div class="tname col-lg-7 col-xs-7">
                            <span></span>
                        </div>
                        <div class="tvalue col-lg-5 col-xs-5 text-right">
                            <span></span>
                        </div>
                    </div>
                </div>
                <div id="model-template">
                    <div class="row">
                        <div class="col-lg-12 col-xs-12 text-center">
                            <span></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<script type="text/javascript" src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/d3/2.10.0/d3.v2.min.js"></script>

<script type="text/javascript" src="/js/demo.js"></script>

<script src = "javascript/app.js"></script>



<script type="text/javascript" src="/js/personality.js"></script>

<script type="text/javascript" src="/js/string-utils.js"></script>

<script type="text/javascript" src="/js/i18n.js"></script>

<script type="text/javascript" src="/js/textsummary.js"></script>

<script type="text/javascript">
    textSummary.init('json');
</script>











</body>
</html>